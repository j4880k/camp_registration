<h1>Listing invoices</h1>

<table>
  <tr>
    <th>User</th>
    <th>Reference code</th>
    <th>Items hash</th>
    <th>Payment type</th>
    <th>Payment date</th>
    <th>Is confirmed</th>
    <th>Broker stream</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invoices.each do |invoice| %>
  <tr>
    <td><%= invoice.user_id %></td>
    <td><%= invoice.reference_code %></td>
    <td><%= invoice.items_hash %></td>
    <td><%= invoice.payment_type %></td>
    <td><%= invoice.payment_date %></td>
    <td><%= invoice.is_confirmed %></td>
    <td><%= invoice.broker_stream %></td>
    <td><%= invoice.status %></td>
    <td><%= link_to 'Show', invoice %></td>
    <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
    <td><%= link_to 'Destroy', invoice, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

